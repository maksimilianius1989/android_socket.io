{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": false,
    "removeComments": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "socket/dist",
    "baseUrl": "..",
    "paths": {
      "*": [
        "node_modules/"
      ]
    }
  },
  "include": [
    "socket/src/**/*"
  ]
}
